{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "allowUnreachableCode": false,
    "strict": false,
    "allowJs": true,
    "strictFunctionTypes": false,
    "strictNullChecks": false,
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
    "resolveJsonModule": true,
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "checkJs": false,
    "experimentalDecorators": true
  }
}